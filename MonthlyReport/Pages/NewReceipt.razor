@page "/Recipt"

@using MonthlyReport.Data.Models;
@inject MonthlyReport.Data.Services.CustomerService CustomerService
@inject IJSRuntime js
<h3>NewReceipt</h3>

<div>
    <select class="form-select-lg">
        @foreach(var customer in customers)
        {
            <option value="@customer.Id">@customer.FistName @customer.LastName</option>
        }
    </select>
</div>

<button onclick="@Print">Print</button>


@code {
    string Error = string.Empty;
    List<Customer> customers = new List<Customer>();
    protected override async Task OnInitializedAsync()
    {
        customers.Add(new Customer()
            {
                Id = 0,
                FistName = "Someone",
                LastName = "LastName",
                Address = "A new Address",
                PhoneNumber = "1234567"
            });
    }
    private async Task Print()
    {
        await js.InvokeVoidAsync("PrintInvoke");
    }


}
