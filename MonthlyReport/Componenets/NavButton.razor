@if (IsFirst)
{
    <div class="nav-item px-3">
        <NavLink class="nav-link" href=@Href Match="@NavLinkMatch.All">
            <span class="@spanClass" aria-hidden="true"></span> @Name
        </NavLink>
    </div>
}
else
{
    <div class="nav-item px-3">
        <NavLink class="nav-link" style="color:white" href=@Href>
            <span class="@spanClass" aria-hidden="true"></span> @Name
        </NavLink>
    </div>
}

@code {
    [Parameter]
    public string Name { get; set; }
    [Parameter]
    public string Href { get; set; }
    [Parameter]
    public bool IsFirst { get; set; } = false;
    [Parameter]
    public string spanClass { get; set; } = string.Empty;

    protected override async Task OnInitializedAsync() 
    {
        spanClass = spanClass == string.Empty ? "oi oi-home" : spanClass; 
    }

}
